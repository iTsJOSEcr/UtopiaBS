@model UtopiaBS.Entities.Contabilidad.Ingreso

@{
    ViewBag.Title = "Agregar Ingreso";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <h3 class="mb-0">💵 Agregar Ingreso</h3>
        </div>
        <div class="card-body">

            @* Mensaje de éxito o info *@
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <strong>¡Éxito!</strong> @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("AgregarIngreso", "Contabilidad", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Monto)
                    @Html.TextBoxFor(m => m.Monto, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Ingrese el monto" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Categoria)
                    @Html.TextBoxFor(m => m.Categoria, new { @class = "form-control", placeholder = "Ingrese la categoría" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Descripcion)
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3, placeholder = "Ingrese una descripción" })
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    💾 Guardar Ingreso
                </button>

                <a href="@Url.Action("Index", "Contabilidad")" class="btn btn-secondary mt-3 ms-2">
                    🔙 Volver al Dashboard
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

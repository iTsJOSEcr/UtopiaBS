@model List<UtopiaBS.Entities.UsuarioActividad>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fechaInicio = ViewBag.FechaInicio;
    var fechaFin = ViewBag.FechaFin;
}

<!-- Bootstrap e Iconos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">

    <!-- TÍTULO -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-people-fill text-primary me-2"></i> Usuarios Activos
        </h2>
        <p class="text-secondary">Resultados del rango seleccionado.</p>
    </div>

    <!-- BOTÓN EXPORTAR -->
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("ExportarExcel", "ReporteUsuariosActivos",
                new { fechaInicio = fechaInicio, fechaFin = fechaFin })"
           class="btn btn-success rounded-pill px-4 shadow">
            <i class="bi bi-file-earmark-excel-fill me-2"></i> Exportar a Excel
        </a>
    </div>

    <!-- TARJETA TABLA -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4" style="background-color:#F8FAFC;">

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person-vcard me-2 text-primary"></i>Usuario</th>
                            <th><i class="bi bi-clock-history text-success me-2"></i>Inicio de sesión</th>
                            <th><i class="bi bi-door-open me-2 text-warning"></i>Fin de sesión</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.UserId</td>
                                <td>@item.FechaInicio</td>
                                <td>
                                    @if (item.FechaFin == null)
                                    {
                                        @Html.Raw("<span class='badge bg-success'>Activo</span>")
                                    }
                                    else
                                    {
                                        @item.FechaFin
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- BOTÓN VOLVER -->
            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "ReporteUsuariosActivos")"
                   class="btn btn-secondary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-arrow-left-circle me-2"></i> Volver
                </a>
            </div>

        </div>
    </div>

</div>

<style>
    body {
        background-color: #F1F3F6;
    }

    .card {
        transition: transform .2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
        }

    table th {
        font-weight: 600;
        color: #333;
    }

    table tbody tr:hover {
        background-color: #eef2f7;
        transition: all .2s ease;
    }
</style>

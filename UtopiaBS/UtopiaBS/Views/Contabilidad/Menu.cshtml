@{
    ViewBag.Title = "Menú de Reportes";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

        <!-- ENCABEZADO -->
        <div class="card-header text-white d-flex align-items-center justify-content-between" style="background-color:#1B263B;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-calendar2-week me-2"></i> Menú de Reportes
            </h3>
            <span class="badge bg-warning text-dark fw-semibold px-3 py-2">Administrador</span>
        </div>

        <!-- CONTENIDO -->
        <div class="card-body" style="background-color:#F8F9FA;">
            <p class="fs-5 text-secondary">
                Seleccione la acción que desea realizar:
            </p>

            <div class="row g-4 mt-3">

                <!-- CONTABILIDAD -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-calendar-check display-5 text-info mb-3"></i>
                            <h5 class="fw-bold">Citas Agendadas</h5>
                            <a href="@Url.Action("Index","Contabilidad")"
                               class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                               style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- CITAS -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-tools display-5 text-warning mb-3"></i>
                            <h5 class="fw-bold">Administrar Citas</h5>
                            <a href="@Url.Action("Menu","Cita")"
                               class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                               style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- REPORTES -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-bar-chart-line-fill display-5 text-danger mb-3"></i>
                            <h5 class="fw-bold">Reportes</h5>
                            <a href="@Url.Action("Reportes","Cita")"
                               class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                               style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- REPORTES -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-bar-chart-line-fill display-5 text-danger mb-3"></i>
                            <h5 class="fw-bold">Contabilidad</h5>
                            <a href="@Url.Action("Index","Contabilidad")"
                               class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                               style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

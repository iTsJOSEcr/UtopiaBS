@model dynamic
@{
    ViewBag.Title = "Resumen Diario";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-info text-white d-flex align-items-center">
            <h3 class="mb-0">📅 Resumen Diario</h3>
        </div>
        <div class="card-body">

            @* Formulario para seleccionar fecha *@
            @using (Html.BeginForm("ResumenDiario", "Contabilidad", FormMethod.Get))
            {
                <div class="form-group mt-3">
                    <label>Seleccionar fecha:</label>
                    <input type="date" name="fecha" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <button type="submit" class="btn btn-info mt-3">
                    🔍 Generar Resumen
                </button>
            }

            @* Mensaje de alerta *@
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                    <strong>¡Aviso!</strong> @ViewBag.Mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* Mostrar resumen si hay datos *@
            else if (Model != null)
            {
                <div class="table-responsive mt-4">
                    <table class="table table-bordered table-hover">
                        <thead class="table-info">
                            <tr>
                                <th class="text-center">Concepto</th>
                                <th class="text-center">Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Total Ingresos</strong></td>
                                <td>@Model.TotalIngresos.ToString("C")</td>
                            </tr>
                            <tr>
                                <td><strong>Total Egresos</strong></td>
                                <td>@Model.TotalEgresos.ToString("C")</td>
                            </tr>
                            <tr>
                                <td><strong>Balance</strong></td>
                                <td>@Model.Balance.ToString("C")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }

            <div class="mt-3">
                <a href="@Url.Action("Index", "Contabilidad")" class="btn btn-secondary">
                    🔙 Volver al Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@{
    ViewBag.Title = "Reporte de Usuarios Activos";
}

<!-- Bootstrap e Iconos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">

    <!-- TÍTULO -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-person-lines-fill text-primary me-2"></i> Reporte de Usuarios Activos
        </h2>
        <p class="text-secondary">Filtre por rango de fechas para consultar los accesos del sistema.</p>
    </div>

    <!-- TARJETA -->
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px;">
        <div class="card-body px-5 py-4" style="background-color:#F8FAFC;">

            @using (Html.BeginForm("Index", "ReporteUsuariosActivos", FormMethod.Post))
            {
                <div class="row g-4 align-items-end">

                    <!-- FECHA INICIO -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">📅 Fecha Inicio</label>
                        <div class="input-group shadow-sm rounded-pill">
                            <span class="input-group-text border-0 bg-light rounded-start-pill">
                                <i class="bi bi-calendar-event text-primary"></i>
                            </span>
                            <input type="date" name="fechaInicio" class="form-control border-0 rounded-end-pill" required />
                        </div>
                    </div>

                    <!-- FECHA FIN -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">📅 Fecha Fin</label>
                        <div class="input-group shadow-sm rounded-pill">
                            <span class="input-group-text border-0 bg-light rounded-start-pill">
                                <i class="bi bi-calendar-check text-success"></i>
                            </span>
                            <input type="date" name="fechaFin" class="form-control border-0 rounded-end-pill" required />
                        </div>
                    </div>

                </div>

                <!-- BOTÓN -->
                <div class="text-center mt-4">
                    <button class="btn fw-semibold text-white border-0 shadow-sm rounded-pill px-5 py-2"
                            style="background-color:#1B263B;">
                        <i class="bi bi-search me-2"></i> Generar Reporte
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #F1F3F6;
    }

    .card {
        transition: transform .2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
        }

    .form-control {
        height: 45px;
        font-size: .95rem;
    }

    .btn:hover {
        transform: translateY(-2px);
        opacity: .9;
    }
</style>

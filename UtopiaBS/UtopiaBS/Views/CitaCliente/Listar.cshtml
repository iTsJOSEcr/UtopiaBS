@model IEnumerable<UtopiaBS.Entities.Cita>
@using UtopiaBS.Entities

@{
    ViewBag.Title = "Citas Disponibles";

    var empleados = ViewBag.Empleados as List<Empleado> ?? new List<Empleado>();
    var servicios = ViewBag.Servicios as List<Servicio> ?? new List<Servicio>();

    int? empleadoSeleccionado = ViewBag.EmpleadoSeleccionado as int?;
    int? servicioSeleccionado = ViewBag.ServicioSeleccionado as int?;
}

<!-- CONTENEDOR PRINCIPAL -->
<div class="container py-5" style="max-width: 1000px;">

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- ENCABEZADO -->
        <div class="card-header text-white d-flex justify-content-between align-items-center"
             style="background-color:#1B263B;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-calendar2-plus text-warning me-2"></i>
                Citas Disponibles
            </h3>
        </div>

        <!-- CUERPO -->
        <div class="card-body" style="background-color:#F8FAFC;">

            <!-- FILTROS -->
            <form method="get" action="@Url.Action("Listar", "CitaCliente")"
                  class="row g-3 justify-content-center mb-4">

                <div class="col-md-5">
                    <select class="form-select filtro" name="empleadoId" onchange="this.form.submit()">
                        <option value="">👤 Filtrar por empleado</option>
                        @foreach (var emp in empleados)
                        {
                            <option value="@emp.IdEmpleado"
                                    @(empleadoSeleccionado == emp.IdEmpleado ? "selected" : "")>
                                @emp.Nombre
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-5">
                    <select class="form-select filtro" name="servicioId" onchange="this.form.submit()">
                        <option value="">💅 Filtrar por servicio</option>
                        @foreach (var ser in servicios)
                        {
                            <option value="@ser.IdServicio"
                                    @(servicioSeleccionado == ser.IdServicio ? "selected" : "")>
                                @ser.Nombre
                            </option>
                        }
                    </select>
                </div>
            </form>

            <!-- MENSAJE -->
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-info fw-semibold text-center rounded-3 shadow-sm py-2 mb-3">
                    <i class="bi bi-info-circle me-2"></i> @TempData["Mensaje"]
                </div>
            }

            <!-- TABLA -->
            <div class="table-responsive rounded-3 shadow-sm" style="max-height: 500px; overflow-y:auto;">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="text-white small" style="background-color:#1B263B;">
                        <tr>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Empleado</th>
                            <th>Servicio</th>
                            <th>Acción</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-muted py-3">No hay citas disponibles</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var cita in Model.OrderBy(c => c.FechaHora))
                            {
                                <tr>
                                    <td>@cita.FechaHora.ToString("dd/MM/yyyy")</td>
                                    <td>@cita.FechaHora.ToString("HH:mm")</td>
                                    <td>@(cita.Empleado?.Nombre ?? "Sin asignar")</td>
                                    <td>@(cita.Servicio?.Nombre ?? "Sin asignar")</td>

                                    <td>
                                        <button type="button" class="btn btn-outline-success btn-sm rounded-pill reservar-btn px-3 shadow-sm"
                                                data-id="@cita.IdCita"
                                                data-fecha="@cita.FechaHora.ToString("dd/MM/yyyy")"
                                                data-hora="@cita.FechaHora.ToString("HH:mm")"
                                                data-empleado="@(cita.Empleado?.Nombre ?? "Sin asignar")"
                                                data-servicio="@(cita.Servicio?.Nombre ?? "Sin asignar")"
                                                data-empleadoid="@cita.IdEmpleado"
                                                data-servicioid="@cita.IdServicio">
                                            <i class="bi bi-calendar-check me-1"></i> Reservar
                                        </button>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="modalReserva" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4">

            <div class="modal-header text-white" style="background-color:#1B263B;">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-check-circle-fill text-warning me-2"></i>
                    Confirmar Reserva
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <ul class="list-unstyled mb-0">
                    <li><strong>📅 Fecha:</strong> <span id="modalFecha"></span></li>
                    <li><strong>⏰ Hora:</strong> <span id="modalHora"></span></li>
                    <li><strong>👤 Empleado:</strong> <span id="modalEmpleado"></span></li>
                    <li><strong>💅 Servicio:</strong> <span id="modalServicio"></span></li>
                </ul>
            </div>

            <div class="modal-footer border-0">
                <form id="formReserva" method="post"
                      action="@Url.Action("Reservar", "CitaCliente")">

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="idCita" id="inputIdCita" />
                    <input type="hidden" name="idEmpleado" id="inputIdEmpleado" />
                    <input type="hidden" name="idServicio" id="inputIdServicio" />

                    <button type="button" class="btn btn-secondary rounded-pill px-4"
                            data-bs-dismiss="modal">
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-success rounded-pill px-4">
                        Confirmar
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- JS -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modal = new bootstrap.Modal(document.getElementById("modalReserva"));

        const fecha = document.getElementById("modalFecha");
        const hora = document.getElementById("modalHora");
        const emp = document.getElementById("modalEmpleado");
        const ser = document.getElementById("modalServicio");

        const idCita = document.getElementById("inputIdCita");
        const idEmpleado = document.getElementById("inputIdEmpleado");
        const idServicio = document.getElementById("inputIdServicio");

        document.querySelectorAll(".reservar-btn").forEach(btn => {
            btn.addEventListener("click", function () {

                fecha.textContent = this.dataset.fecha;
                hora.textContent = this.dataset.hora;
                emp.textContent = this.dataset.empleado ?? "Sin asignar";
                ser.textContent = this.dataset.servicio ?? "Sin asignar";

                idCita.value = this.dataset.id;
                idEmpleado.value = this.dataset.empleadoid;
                idServicio.value = this.dataset.servicioid;

                modal.show();
            });
        });
    });
</script>

<!-- ESTILOS -->
<style>
    body {
        background-color: #F1F5F9;
    }

    .filtro {
        border-radius: 12px;
        padding: 10px;
        background-color: #ffffff;
        border: 1px solid #d0d7de;
        transition: 0.2s ease;
    }

        .filtro:focus {
            border-color: #0A58CA !important;
            box-shadow: 0 0 6px rgba(10, 88, 202, 0.4);
        }

    .table-hover tbody tr:hover {
        background-color: #E3F2FD !important;
    }

    .btn-outline-success:hover {
        background-color: #198754;
        color: white;
    }

    .table-responsive::-webkit-scrollbar {
        width: 8px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background-color: #0A58CA;
        border-radius: 4px;
    }
</style>

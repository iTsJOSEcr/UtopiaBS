@model UtopiaBS.Entities.Producto

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <!-- ENCABEZADO -->
                <div class="card-header text-white text-center fw-bold" style="background-color:#198754;">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle-fill me-2"></i> Agregar Producto
                    </h3>
                </div>

                <!-- CUERPO -->
                <div class="card-body p-4" style="background-color:#f9fafc;">

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-success text-center fw-semibold rounded-pill shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Mensaje
                        </div>
                    }

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row g-3">

                            <!-- NOMBRE -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Nombre, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.EditorFor(m => m.Nombre, new
                                {
                                    htmlAttributes = new { @class = "form-control form-control-lg shadow-sm", placeholder = "Nombre del producto" }
                                })
                                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger small" })
                            </div>

                            <!-- TIPO -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Tipo, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.EditorFor(m => m.Tipo, new
                                {
                                    htmlAttributes = new { @class = "form-control form-control-lg shadow-sm", placeholder = "Tipo / categoría" }
                                })
                                @Html.ValidationMessageFor(m => m.Tipo, "", new { @class = "text-danger small" })
                            </div>

                            <!-- PROVEEDOR -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Proveedor, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.EditorFor(m => m.Proveedor, new
                                {
                                    htmlAttributes = new { @class = "form-control form-control-lg shadow-sm", placeholder = "Proveedor" }
                                })
                                @Html.ValidationMessageFor(m => m.Proveedor, "", new { @class = "text-danger small" })
                            </div>

                            <!-- PRECIO -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.PrecioUnitario, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.EditorFor(m => m.PrecioUnitario, new
                                {
                                    htmlAttributes = new { @class = "form-control form-control-lg shadow-sm", placeholder = "₡0.00" }
                                })
                                @Html.ValidationMessageFor(m => m.PrecioUnitario, "", new { @class = "text-danger small" })
                            </div>

                            <!-- STOCK -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.CantidadStock, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.EditorFor(m => m.CantidadStock, new
                                {
                                    htmlAttributes = new { @class = "form-control form-control-lg shadow-sm", placeholder = "0" }
                                })
                                @Html.ValidationMessageFor(m => m.CantidadStock, "", new { @class = "text-danger small" })
                            </div>

                            <!-- THRESHOLD -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Threshold, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.EditorFor(m => m.Threshold, new
                                {
                                    htmlAttributes = new { @class = "form-control form-control-lg shadow-sm", placeholder = "10" }
                                })
                                <small class="text-muted">Valor recomendado: 10 unidades.</small>
                                @Html.ValidationMessageFor(m => m.Threshold, "", new { @class = "text-danger small" })
                            </div>

                            <!-- FECHA DE EXPIRACIÓN -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-secondary">Fecha de Expiración</label>
                                <input type="date" name="FechaExpiracion"
                                       class="form-control form-control-lg shadow-sm" />
                                <small class="text-muted">Opcional. Dejar vacío si no expira.</small>
                            </div>

                            <!-- DÍAS DE ALERTA -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-secondary">Días de Anticipación</label>
                                <input type="number"
                                       name="DiasAnticipacion"
                                       class="form-control form-control-lg shadow-sm"
                                       value="30" min="1" />
                                <small class="text-muted">Días antes de vencer para activar la alerta. Por defecto: 30.</small>
                            </div>

                            <!-- DESCRIPCIÓN -->
                            <div class="col-12">
                                @Html.LabelFor(m => m.Descripcion, new { @class = "form-label fw-semibold text-secondary" })
                                @Html.TextAreaFor(m => m.Descripcion, new
                                {
                                    @class = "form-control shadow-sm",
                                    rows = 3,
                                    placeholder = "Descripción del producto"
                                })
                                @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger small" })
                            </div>

                        </div>

                        <!-- BOTONES -->
                        <div class="d-flex flex-column flex-md-row justify-content-between gap-3 mt-4">
                            <button type="submit"
                                    class="btn fw-semibold text-dark shadow-sm w-100 rounded-pill py-2"
                                    style="background-color:#ffd60a;">
                                <i class="bi bi-plus-circle me-2"></i> Agregar Producto
                            </button>

                            @Html.ActionLink("⬅ Regresar al Inventario", "Listar", "Producto",
                                null, new { @class = "btn btn-outline-secondary fw-semibold w-100 rounded-pill py-2" })
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #eef3f9;
    }

    .form-control-lg {
        border-radius: 10px;
        border: 1px solid #ced4da;
        height: 46px;
    }

        .form-control-lg:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
        }
</style>

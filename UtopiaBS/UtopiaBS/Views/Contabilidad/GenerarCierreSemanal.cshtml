@model UtopiaBS.Entities.Contabilidad.CierreSemanal

@{
    ViewBag.Title = "Cierre Semanal";

    // Preparar strings de fecha para inputs
    string inicioStr = Model != null ? Model.FechaInicio.ToString("yyyy-MM-dd") : "";
    string finStr = Model != null ? Model.FechaFin.ToString("yyyy-MM-dd") : "";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex align-items-center">
            <h3 class="mb-0">📊 Generar Cierre Semanal</h3>
        </div>
        <div class="card-body">

            @* Mensajes de éxito o advertencia *@
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                    <strong>¡Aviso!</strong> @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("GenerarCierreSemanal", "Contabilidad", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mt-3">
                    <label>Fecha de inicio:</label>
                    <input type="date" name="inicio" class="form-control" required value="@inicioStr" />
                </div>

                <div class="form-group mt-3">
                    <label>Fecha de fin:</label>
                    <input type="date" name="fin" class="form-control" required value="@finStr" />
                </div>

                <button type="submit" class="btn btn-success mt-3">
                    📅 Generar Cierre
                </button>
            }

            @if (Model != null)
            {
                <h3 class="mt-4">Cierre Semanal generado</h3>
                <p><strong>Fecha inicio:</strong> @Model.FechaInicio.ToShortDateString()</p>
                <p><strong>Fecha fin:</strong> @Model.FechaFin.ToShortDateString()</p>
                <p><strong>Total Ingresos:</strong> @Model.TotalIngresos.ToString("C")</p>
                <p><strong>Total Egresos:</strong> @Model.TotalEgresos.ToString("C")</p>
                <p><strong>Balance:</strong> @Model.Balance.ToString("C")</p>

                <div class="mt-3">
                    <a href="@Url.Action("DescargarCierre", "Contabilidad", new { inicio = inicioStr, fin = finStr, formato = "excel" })"
                       class="btn btn-success me-2">
                        📥 Descargar Excel
                    </a>

                    <a href="@Url.Action("DescargarCierre", "Contabilidad", new { inicio = inicioStr, fin = finStr, formato = "pdf" })"
                       class="btn btn-danger">
                        📥 Descargar PDF
                    </a>
                </div>
            }

            <div class="mt-3">
                <a href="@Url.Action("Index", "Contabilidad")" class="btn btn-secondary">
                    🔙 Volver al Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





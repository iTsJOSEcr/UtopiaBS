@model UtopiaBS.Entities.CuponDescuento
@{
    ViewBag.Title = "Agregar Cupón de Descuento";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">🎟️ Agregar Nuevo Cupón</h3>
            <a href="@Url.Action("Index", "Producto")" class="btn btn-light btn-sm">← Volver al Inventario</a>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Agregar", "CuponDescuento", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Código del Cupón</label>
                        @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control", placeholder = "Ej. DESCUENTO10" })
                        @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tipo de Descuento</label>
                        @Html.DropDownListFor(m => m.Tipo, new SelectList(new[] { "Porcentaje", "Monto Fijo" }), "Seleccione tipo", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.Tipo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Valor</label>
                        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Ej. 10 o 500" })
                        @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Activo</label>
                        <div class="form-check form-switch mt-2">
                            @Html.CheckBoxFor(m => m.Activo, new { @class = "form-check-input" })
                            <label class="form-check-label">Cupón activo</label>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Fecha de Inicio</label>
                        @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Fecha de Fin</label>
                        @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.FechaFin, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">💾 Guardar Cupón</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: 600;
    }
</style>

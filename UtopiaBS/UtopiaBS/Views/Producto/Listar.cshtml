@model UtopiaBS.ViewModels.InventarioViewModel

@{
    ViewBag.Title = "Inventario (Productos y Cupones)";
    var cupones = Model.Cupones;
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">

    <!-- === PRODUCTOS === -->
    <div class="card shadow-lg border-0 rounded-4 mb-5 overflow-hidden">
        <div class="card-header text-white d-flex justify-content-between align-items-center"
             style="background-color:#0056b3;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-box-seam-fill text-warning me-2"></i> Productos en Inventario
            </h3>

            <div class="d-flex gap-2">
                @Html.ActionLink("➕ Agregar Producto", "Agregar", "Producto", null,
                         new { @class = "btn btn-light btn-sm fw-semibold rounded-pill shadow-sm" })

                <a class="btn btn-warning btn-sm fw-semibold rounded-pill shadow-sm"
                   href="@Url.Action("ExportarInventario", "Producto")">
                    <i class="bi bi-file-earmark-excel me-1"></i> Exportar Inventario
                </a>
            </div>
        </div>

        <div class="card-body" style="background-color:#F8FAFC;">

            @if (TempData["MensajeProducto"] != null)
            {
                <div class="alert alert-success text-center fw-semibold shadow-sm rounded-pill py-2 mb-3">
                    <i class="bi bi-check-circle me-2"></i> @TempData["MensajeProducto"]
                </div>
            }

            <div class="table-responsive rounded-3 shadow-sm" style="max-height:500px; overflow-y:auto;">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="text-white" style="background-color:#003d80;">
                        <tr>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Proveedor</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Expiración</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Productos)
                        {
                            var hoy = DateTime.Now.Date;
                            bool tieneExp = item.FechaExpiracion.HasValue;
                            bool expirado = tieneExp && item.FechaExpiracion.Value.Date < hoy;

                            bool cerca = false;
                            if (tieneExp && item.DiasAnticipacion.HasValue && !expirado)
                            {
                                var diasRestantes = (item.FechaExpiracion.Value.Date - hoy).TotalDays;
                                cerca = diasRestantes <= item.DiasAnticipacion.Value;
                            }

                            <tr>
                                <td><strong>@item.Nombre</strong></td>
                                <td>@item.Tipo</td>
                                <td>@item.Proveedor</td>

                                <!-- Precio -->
                                <td><span class="badge bg-success">₡@item.PrecioUnitario</span></td>

                                <!-- Cantidad + Threshold -->
                                <td>
                                    @if (item.CantidadStock <= item.Threshold)
                                    {
                                        <span class="badge bg-danger">@item.CantidadStock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@item.CantidadStock</span>
                                    }

                                    @if ((hoy - item.Fecha).TotalDays > 90)
                                    {
                                        <span class="badge bg-secondary ms-1" title="Producto antiguo">⌛</span>
                                    }
                                </td>

                                <!-- Expiración -->
                                <td>
                                    @if (!tieneExp)
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                    else if (expirado)
                                    {
                                        <span class="badge bg-danger">
                                            Expirado <i class="bi bi-x-circle"></i>
                                        </span>
                                        <br />
                                        <small>@item.FechaExpiracion.Value.ToShortDateString()</small>
                                    }
                                    else if (cerca)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            Próximo a expirar <i class="bi bi-exclamation-triangle"></i>
                                        </span>
                                        <br />
                                        <small>@item.FechaExpiracion.Value.ToShortDateString()</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Vigente</span>
                                        <br />
                                        <small>@item.FechaExpiracion.Value.ToShortDateString()</small>
                                    }
                                </td>

                                <td>
                                    @Html.ActionLink("✏️", "Editar", "Producto",
                                             new { id = item.IdProducto },
                                             new { @class = "btn btn-sm btn-outline-warning me-1 rounded-pill shadow-sm", title = "Editar" })

                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger rounded-pill shadow-sm eliminar-btn"
                                            data-id="@item.IdProducto"
                                            data-nombre="@item.Nombre"
                                            data-tipo="producto">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- === CUPONES (COMPLETO, ORIGINAL) === -->
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-header text-white d-flex justify-content-between align-items-center"
             style="background-color:#007a33;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-ticket-perforated-fill text-warning me-2"></i> Cupones de Descuento
            </h3>

            <a class="btn btn-light btn-sm fw-semibold rounded-pill shadow-sm"
               href="@Url.Action("Agregar", "CuponDescuento")">
                ➕ Agregar Cupón
            </a>
        </div>

        <div class="card-body" style="background-color:#F8FAFC;">

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success text-center fw-semibold shadow-sm rounded-pill py-2 mb-3">
                    <i class="bi bi-check-circle me-2"></i> @TempData["Mensaje"]
                </div>
            }

            @if (TempData["MensajeCupon"] != null)
            {
                <div class="alert alert-success text-center fw-semibold shadow-sm rounded-pill py-2 mb-3">
                    <i class="bi bi-check-circle me-2"></i> @TempData["MensajeCupon"]
                </div>
            }

            <div class="table-responsive rounded-3 shadow-sm" style="max-height:500px; overflow-y:auto;">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="text-white" style="background-color:#003d80;">
                        <tr>
                            <th>Código</th>
                            <th>Tipo / Valor</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (cupones != null && cupones.Any())
                        {
                            foreach (var cupon in cupones)
                            {
                                <tr>
                                    <td><strong>@cupon.Codigo</strong></td>

                                    <td>
                                        @if (string.Equals(cupon.Tipo, "Porcentaje", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-info">@cupon.Valor %</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">₡@cupon.Valor</span>
                                        }
                                    </td>

                                    <td>@cupon.FechaInicio.ToShortDateString()</td>
                                    <td>@cupon.FechaFin.ToShortDateString()</td>

                                    <td>
                                        @using (Html.BeginForm("CambiarEstado", "CuponDescuento", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("id", cupon.CuponId)

                                            <button type="submit"
                                                    class="btn btn-sm @(cupon.Activo ? "btn-success" : "btn-secondary") rounded-pill shadow-sm">
                                                @(cupon.Activo ? "Activo" : "Inactivo")
                                            </button>
                                        }
                                    </td>

                                    <td>
                                        @Html.ActionLink("✏️", "Editar", "CuponDescuento",
                                                 new { id = cupon.CuponId },
                                                 new { @class = "btn btn-sm btn-outline-warning me-1 rounded-pill shadow-sm" })

                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger rounded-pill shadow-sm eliminar-btn"
                                                data-id="@cupon.CuponId"
                                                data-nombre="@cupon.Codigo"
                                                data-tipo="cupon">
                                            🗑️
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-muted py-3">No hay cupones registrados.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<!-- === MODAL ELIMINAR === -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header text-white" style="background-color:#d62828;">
                <h5 class="modal-title fw-semibold">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirmar eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center text-secondary">
                ¿Está seguro de que desea eliminar <strong><span id="modalNombre"></span></strong>?
            </div>

            <div class="modal-footer border-0 d-flex justify-content-between">
                <button type="button" class="btn btn-secondary rounded-pill px-3" data-bs-dismiss="modal">
                    Cancelar
                </button>

                <form id="formEliminar" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="inputId" />
                    <button type="submit" class="btn btn-danger rounded-pill px-3">
                        Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JS -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modalEl = document.getElementById("modalEliminar");
        const bsModal = new bootstrap.Modal(modalEl);
        const inputId = document.getElementById("inputId");
        const nombreEl = document.getElementById("modalNombre");
        const formEliminar = document.getElementById("formEliminar");

        document.querySelectorAll(".eliminar-btn").forEach(btn => {
            btn.addEventListener("click", function () {
                inputId.value = this.dataset.id;
                nombreEl.textContent = this.dataset.nombre;

                formEliminar.action =
                    this.dataset.tipo === "producto"
                        ? "@Url.Action("Eliminar", "Producto")"
                        : "@Url.Action("Eliminar", "CuponDescuento")";

                bsModal.show();
            });
        });
    });
</script>

<style>
    body {
        background-color: #eef3f9;
    }

    .table-hover tbody tr:hover {
        background-color: #dbeafe;
    }
</style>
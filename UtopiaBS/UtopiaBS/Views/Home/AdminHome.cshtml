@{
    ViewBag.Title = "Panel del Administrador";
}

<!-- ICONOS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- ENCABEZADO -->
        <div class="card-header text-white d-flex align-items-center justify-content-between" style="background-color:#1B263B;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-speedometer2 me-2"></i> Panel Administrativo
            </h3>
            <span class="badge bg-warning text-dark fw-semibold px-3 py-2">Administrador</span>
        </div>

        <!-- CONTENIDO -->
        <div class="card-body" style="background-color:#F8F9FA;">
            <p class="fs-5 text-secondary">
                Bienvenido al panel de gestión del sistema. 
            </p>

            <div class="row g-4 mt-3">
                <!-- CITAS -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <div class="mb-3 text-primary">
                                <i class="bi bi-calendar-week display-5"></i>
                            </div>
                            <h5 class="fw-bold text-dark">Gestión de Citas</h5>
                            <a href="@Url.Action("ListarAgendadas","Cita")" class="btn w-100 fw-semibold text-dark border-0 shadow-sm" style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- INVENTARIO -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <div class="mb-3 text-success">
                                <i class="bi bi-box-seam display-5"></i>
                            </div>
                            <h5 class="fw-bold text-dark">Inventario</h5>
                            <a href="@Url.Action("Listar","Producto")" class="btn w-100 fw-semibold text-dark border-0 shadow-sm" style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- PUNTO DE VENTA -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <div class="mb-3 text-warning">
                                <i class="fa-solid fa-cash-register display-5 text-warning"></i>
                            </div>
                            <h5 class="fw-bold text-dark">Punto de Venta</h5>
                            <a href="@Url.Action("PuntoVenta","Ventas")" class="btn w-100 fw-semibold text-dark border-0 shadow-sm" style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- CONTABILIDAD -->
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <div class="mb-3 text-info">
                                <i class="bi bi-graph-up-arrow display-5"></i>
                            </div>
                            <h5 class="fw-bold text-dark">Contabilidad</h5>
                            <a href="@Url.Action("Index","Contabilidad")" class="btn w-100 fw-semibold text-dark border-0 shadow-sm" style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- REPORTES -->
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body text-center py-4">
                            <div class="mb-3 text-danger">
                                <i class="bi bi-bar-chart-fill display-5"></i>
                            </div>
                            <h5 class="fw-bold text-dark">Reportes y Estadísticas</h5>
                            <a href="@Url.Action("Reportes","Cita")" class="btn w-100 fw-semibold text-dark border-0 shadow-sm" style="background-color:#FFD60A;">
                                <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #fdfdfd;
    }

    .card {
        transition: transform 0.25s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .card-header h3 {
        letter-spacing: 0.5px;
    }

    .badge {
        font-size: 0.9rem;
        border-radius: 10px;
    }
</style>

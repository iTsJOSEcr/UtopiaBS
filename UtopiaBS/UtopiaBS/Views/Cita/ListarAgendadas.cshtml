@model IEnumerable<UtopiaBS.Entities.Cita>
@{
    ViewBag.Title = "Administrar Citas Pendientes";
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- ENCABEZADO -->
        <div class="card-header d-flex justify-content-between align-items-center text-white" style="background-color:#1B263B;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-calendar2-check me-2 text-warning"></i> Administrar Citas Pendientes
            </h3>
            <span class="badge bg-warning text-dark fw-semibold px-3 py-2">Pendientes</span>
        </div>

        <!-- CUERPO -->
        <div class="card-body" style="background-color:#F8FAFC;">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success text-center fw-semibold rounded-3 shadow-sm py-2 mb-3">
                    <i class="bi bi-check-circle me-2"></i> @TempData["Mensaje"]
                </div>
            }

            <!-- TABLA -->
            <div class="table-responsive rounded-3 shadow-sm" style="max-height: 500px; overflow-y:auto;">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="text-white text-uppercase small" style="background-color:#1B263B;">
                        <tr>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Cliente</th>
                            <th>Empleado</th>
                            <th>Servicio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-muted py-3">No hay citas pendientes</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var cita in Model.OrderBy(c => c.FechaHora))
                            {
                                <tr>
                                    <td>@cita.FechaHora.ToString("dd/MM/yyyy")</td>
                                    <td>@cita.FechaHora.ToString("HH:mm")</td>
                                    <td>@(cita.Cliente?.Nombre ?? "Sin cliente")</td>
                                    <td>@(cita.Empleado?.Nombre ?? "Sin asignar")</td>
                                    <td>@(cita.Servicio?.Nombre ?? "Sin asignar")</td>
                                    <td>
                                        <form method="post" style="display:inline;" action="@Url.Action("ConfirmarCita", "Cita")">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@cita.IdCita" />
                                            <button type="submit"
                                                    class="btn btn-sm me-1 rounded-pill shadow-sm fw-semibold text-dark border-0"
                                                    style="background-color:#FFD60A;">
                                                <i class="bi bi-check2-circle me-1"></i> Confirmar
                                            </button>
                                        </form>
                                        <form method="post" style="display:inline;" action="@Url.Action("CancelarCita", "Cita")">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@cita.IdCita" />
                                            <button type="submit"
                                                    class="btn btn-sm rounded-pill shadow-sm fw-semibold text-white border-0"
                                                    style="background-color:#C1121F;">
                                                <i class="bi bi-x-circle me-1"></i> Cancelar
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #F3F4F6;
    }

    .table-hover tbody tr:hover {
        background-color: #FFF8E1;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

    .alert-success {
        background-color: #E9F7EF;
        border-left: 6px solid #198754;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
        }

    .table-responsive::-webkit-scrollbar {
        width: 8px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background-color: #FFD60A;
        border-radius: 4px;
    }

    th {
        letter-spacing: 0.5px;
    }
</style>

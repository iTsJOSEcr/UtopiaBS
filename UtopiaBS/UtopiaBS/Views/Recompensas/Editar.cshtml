@model UtopiaBS.Entities.Recompensas.Recompensa

@{
    ViewBag.Title = "Editar Recompensa";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">

    <div class="card shadow-lg border-0 rounded-4 col-lg-6 mx-auto">

        <div class="card-header text-white text-center fw-bold"
             style="background-color:#1B263B;">
            ✏️ Editar Recompensa
        </div>

        <div class="card-body p-4">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.IdRecompensa)

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo</label>
                    @Html.DropDownListFor(m => m.Tipo,
                        new SelectList(new[] { "Cupón", "Producto", "Servicio" }, Model.Tipo),
                        new { @class = "form-select", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Puntos Necesarios</label>
                    @Html.TextBoxFor(m => m.PuntosNecesarios, new { @class = "form-control", type = "number", required = "required" })
                </div>

                <div class="mb-4">
                    <label class="form-label">Valor</label>
                    @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                </div>

                <div class="form-check mb-3">
                    @Html.CheckBoxFor(m => m.Activa, new { @class = "form-check-input" })
                    <label class="form-check-label fw-semibold">Recompensa activa</label>
                </div>

                <div class="d-grid">
                    <button class="btn btn-warning fw-semibold">
                        <i class="bi bi-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            }

        </div>
    </div>
</div>

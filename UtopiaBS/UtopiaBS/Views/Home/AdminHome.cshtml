@{
    ViewBag.Title = "Panel del Administrador";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

        <!-- ENCABEZADO -->
        <div class="card-header text-white d-flex align-items-center justify-content-between" style="background-color:#1B263B;">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-speedometer2 me-2"></i> Panel Administrativo
            </h3>
            <span class="badge bg-warning text-dark fw-semibold px-3 py-2">Administrador</span>
        </div>

        <!-- ALERTAS DE INVENTARIO -->
        <div class="mt-4">

            @if (ViewBag.Expirados != null && ViewBag.Expirados.Count > 0)
            {
                <div class="alert alert-danger fw-semibold shadow-sm rounded-3">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>
                    Hay <strong>@ViewBag.Expirados.Count</strong> productos expirados.
                    <a href="@Url.Action("Listar","Producto")" class="ms-2 fw-bold text-dark">
                        Ver detalles →
                    </a>
                </div>
            }

            @if (ViewBag.PorExpirar != null && ViewBag.PorExpirar.Count > 0)
            {
                <div class="alert alert-warning fw-semibold shadow-sm rounded-3">
                    <i class="bi bi-hourglass-split me-2"></i>
                    Hay <strong>@ViewBag.PorExpirar.Count</strong> productos próximos a expirar.
                    <a href="@Url.Action("Listar","Producto")" class="ms-2 fw-bold text-dark">
                        Ver detalles →
                    </a>
                </div>
            }
        </div>

        <!-- CONTENIDO -->
        <div class="card-body" style="background-color:#F8F9FA;">
            <p class="fs-5 text-secondary">
                Bienvenido al panel de gestión del sistema.
            </p>

            <div class="row g-4 mt-3">

                <div class="row g-4 mt-3">

                    <!-- CITAS -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-primary">
                                    <i class="bi bi-calendar-week display-5"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Gestión de Citas</h5>
                                <a href="@Url.Action("Menu","Cita")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- INVENTARIO -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-success">
                                    <i class="bi bi-box-seam display-5"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Inventario</h5>
                                <a href="@Url.Action("Listar","Producto")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- PUNTO DE VENTA -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-warning">
                                    <i class="fa-solid fa-cash-register display-5 text-warning"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Punto de Venta</h5>
                                <a href="@Url.Action("PuntoVenta","Ventas")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- GESTIÓN DE USUARIOS (NUEVO) -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3">
                                    <i class="bi bi-people-fill display-5 text-dark"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Gestión de Usuarios</h5>
                                <a href="@Url.Action("GestionUsuarios","Admin")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- MEMBRESIAS -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-warning">
                                    <i class="bi bi-stars display-5"></i>
                                </div>

                                <h5 class="fw-bold text-dark">Asignar Membresías</h5>

                                <a href="@Url.Action("Panel", "Membresias")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- RECOMPENSAS -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-danger">
                                    <i class="bi bi-gift-fill display-5"></i>
                                </div>

                                <h5 class="fw-bold text-dark">Gestión de Recompensas</h5>

                                <a href="@Url.Action("Index", "Recompensas")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- CONTABILIDAD -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-info">
                                    <i class="bi bi-graph-up-arrow display-5"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Contabilidad</h5>
                                <a href="@Url.Action("Index","Contabilidad")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- REPORTES -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-4">
                                <div class="mb-3 text-danger">
                                    <i class="bi bi-bar-chart-fill display-5"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Reportes y Estadísticas</h5>
                                <a href="@Url.Action("Menu","Contabilidad")"
                                   class="btn w-100 fw-semibold text-dark border-0 shadow-sm"
                                   style="background-color:#FFD60A;">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Entrar
                                </a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

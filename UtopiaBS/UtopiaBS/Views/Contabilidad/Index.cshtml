@{
    ViewBag.Title = "Contabilidad - Dashboard";
}

<div class="container py-5">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <!-- HEADER -->
        <div class="card-header d-flex justify-content-between align-items-center text-white"
             style="background-color:#1B263B;">
            <h3 class="mb-0 fw-bold"><i class="bi bi-cash-coin me-2"></i> Contabilidad</h3>
            <span class="badge px-3 py-2" style="background-color:#FFD60A; color:#1B263B;">Dashboard</span>
        </div>

        <!-- BODY -->
        <div class="card-body p-4" style="background-color:#F8F9FA;">
            <p class="fs-5 fw-semibold text-secondary mb-4">
                Seleccione la acción que desea realizar:
            </p>

            <!-- BOTONES PRINCIPALES -->
            <div class="row g-3">
                <div class="col-md-6 col-lg-3">
                    @Html.ActionLink("➕ Agregar Ingreso", "AgregarIngreso", "Contabilidad", null, new { @class = "btn btn-lg w-100 fw-semibold text-dark border-0 shadow-sm", style = "background-color:#FFD60A;" })
                </div>
                <div class="col-md-6 col-lg-3">
                    @Html.ActionLink("➖ Agregar Egreso", "AgregarEgreso", "Contabilidad", null, new { @class = "btn btn-lg w-100 fw-semibold text-white border-0 shadow-sm", style = "background-color:#C1121F;" })
                </div>
                <div class="col-md-6 col-lg-3">
                    @Html.ActionLink("📊 Generar Cierre Semanal", "GenerarCierreSemanal", "Contabilidad", null, new { @class = "btn btn-lg w-100 fw-semibold text-white border-0 shadow-sm", style = "background-color:#1B4332;" })
                </div>
                <div class="col-md-6 col-lg-3">
                    @Html.ActionLink("📅 Resumen Diario", "ResumenDiario", "Contabilidad", null, new { @class = "btn btn-lg w-100 fw-semibold text-dark border-0 shadow-sm", style = "background-color:#FFD60A;" })
                </div>
                <div class="col-md-6 col-lg-3">
                    @Html.ActionLink("📈 Resumen Mensual", "ResumenMensual", "Contabilidad", null,
                        new { @class = "btn btn-lg w-100 fw-semibold text-white border-0 shadow-sm", style = "background-color:#0D6EFD;" })
                </div>

            </div>

            <!-- MENSAJES TEMPORALES -->
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-warning mt-4 shadow-sm rounded-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Mensaje"]
                </div>
            }

            @if (TempData["DebugRuta"] != null)
            {
                <div class="alert alert-info mt-3 shadow-sm rounded-3">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Archivo debug guardado en: <strong>@TempData["DebugRuta"]</strong>
                    (@TempData["DebugTamKb"])
                </div>
            }

            @if (TempData["DebugErrorEscribir"] != null)
            {
                <div class="alert alert-danger mt-3 shadow-sm rounded-3">
                    <i class="bi bi-x-circle-fill me-2"></i>
                    Error al escribir debug: @TempData["DebugErrorEscribir"]
                </div>
            }
        </div>
    </div>
</div>

<!-- ICONOS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #fdfdfd;
    }

    .card {
        transition: 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
        }

    .card-header {
        font-size: 1.5rem;
        letter-spacing: 0.5px;
    }

    .btn {
        font-size: 1rem;
        border-radius: 10px;
        padding: 0.9rem 0.8rem;
        transition: all 0.25s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
            opacity: 0.9;
        }

    .alert {
        font-size: 0.95rem;
    }

        .alert i {
            vertical-align: middle;
        }

    .alert-warning {
        background-color: #FFF3CD;
        border: none;
        color: #856404;
    }

    .alert-info {
        background-color: #E7F1FF;
        border: none;
        color: #0B3954;
    }

    .alert-danger {
        background-color: #F8D7DA;
        border: none;
        color: #721C24;
    }
</style>

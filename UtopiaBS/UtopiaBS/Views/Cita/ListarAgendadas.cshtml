@model IEnumerable<UtopiaBS.Entities.Cita>
@{
    ViewBag.Title = "Administrar Citas";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">📋 Administrar Citas Pendientes</h3>
        </div>
        <div class="card-body">

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success text-center py-2">@TempData["Mensaje"]</div>
            }

            <div class="table-responsive shadow-sm rounded" style="max-height: 450px; overflow-y:auto;">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="table-primary text-uppercase small">
                        <tr>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Cliente</th>
                            <th>Empleado</th>
                            <th>Servicio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-muted small">No hay citas pendientes</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var cita in Model.OrderBy(c => c.FechaHora))
                            {
                    <tr>
                        <td>@cita.FechaHora.ToString("dd/MM/yyyy")</td>
                        <td>@cita.FechaHora.ToString("HH:mm")</td>
                        <td>@(cita.Cliente?.Nombre ?? "Sin cliente")</td>
                        <td>@(cita.Empleado?.Nombre ?? "Sin asignar")</td>
                        <td>@(cita.Servicio?.Nombre ?? "Sin asignar")</td>
                        <td>
                            <form method="post" style="display:inline;" action="@Url.Action("ConfirmarCita", "Cita")">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@cita.IdCita" />
                                <button type="submit" class="btn btn-success btn-sm me-1 rounded-pill px-3">Confirmar</button>
                            </form>
                            <form method="post" style="display:inline;" action="@Url.Action("CancelarCita", "Cita")">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@cita.IdCita" />
                                <button type="submit" class="btn btn-danger btn-sm rounded-pill px-3">Cancelar</button>
                            </form>
                        </td>
                    </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<style>
    .table-primary th {
        background-color: #4e73df;
        color: white;
    }

    .table-responsive {
        scrollbar-width: thin;
        scrollbar-color: #4e73df #f1f1f1;
    }

        .table-responsive::-webkit-scrollbar {
            width: 8px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background-color: #4e73df;
            border-radius: 4px;
        }

    .btn-success, .btn-danger {
        font-size: 0.85rem;
        font-weight: 500;
    }
</style>

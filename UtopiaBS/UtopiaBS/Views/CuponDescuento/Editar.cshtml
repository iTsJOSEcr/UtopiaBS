@model UtopiaBS.Entities.CuponDescuento
@{
    ViewBag.Title = "Editar Cupón de Descuento";
}

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <!-- ENCABEZADO -->
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h3 class="mb-0 fw-bold d-flex align-items-center gap-2">
                ✏️ Editar Cupón
            </h3>
            <a href="@Url.Action("Index", "Producto")" class="btn btn-light btn-sm rounded-pill px-3">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver al Inventario
            </a>
        </div>

        <!-- CUERPO -->
        <div class="card-body" style="background-color:#F9FAFC;">
            @using (Html.BeginForm("Editar", "CuponDescuento", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.CuponId)

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">
                            <i class="bi bi-ticket-detailed text-warning me-1"></i> Código del Cupón
                        </label>
                        @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control shadow-sm", placeholder = "Ej. DESCUENTO10" })
                        @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">
                            <i class="bi bi-diagram-3 text-warning me-1"></i> Tipo de Descuento
                        </label>
                        @Html.DropDownListFor(m => m.Tipo,
                            new SelectList(new[] { "Porcentaje", "Monto Fijo" }, Model.Tipo),
                            "Seleccione tipo",
                            new { @class = "form-select shadow-sm" })
                        @Html.ValidationMessageFor(m => m.Tipo, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">
                            <i class="bi bi-cash-stack text-success me-1"></i> Valor
                        </label>
                        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control shadow-sm", type = "number", step = "0.01", placeholder = "Ej. 15 o 5000" })
                        @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">
                            <i class="bi bi-toggle-on text-success me-1"></i> Estado
                        </label>
                        <div class="form-check form-switch mt-2 ms-1">
                            @Html.CheckBoxFor(m => m.Activo, new { @class = "form-check-input", style = "cursor:pointer;" })
                            <label class="form-check-label fw-semibold">@((Model.Activo ? "Cupón activo" : "Cupón inactivo"))</label>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">
                            <i class="bi bi-calendar-event text-primary me-1"></i> Fecha de Inicio
                        </label>
                        @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control shadow-sm", type = "date" })
                        @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-secondary">
                            <i class="bi bi-calendar-check text-primary me-1"></i> Fecha de Fin
                        </label>
                        @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control shadow-sm", type = "date" })
                        @Html.ValidationMessageFor(m => m.FechaFin, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <!-- BOTONES -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("Index", "Producto")" class="btn btn-outline-secondary fw-semibold rounded-pill px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning text-dark fw-semibold rounded-pill shadow-sm px-4">
                        <i class="bi bi-save2 me-1"></i> Guardar Cambios
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #F1F5F9;
    }

    .form-control:focus, .form-select:focus {
        border-color: #FFC107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .form-label {
        font-weight: 600;
    }

    .text-secondary {
        color: #495057 !important;
    }
</style>

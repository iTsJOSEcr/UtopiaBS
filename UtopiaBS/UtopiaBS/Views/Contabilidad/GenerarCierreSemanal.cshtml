@model UtopiaBS.Entities.Contabilidad.CierreSemanal

@{
    ViewBag.Title = "Cierre Semanal";
}

<h2>Generar Cierre Semanal</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">@ViewBag.Mensaje</div>
}

@using (Html.BeginForm("GenerarCierreSemanal", "Contabilidad", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Fecha de inicio:</label>
        <input type="date" name="inicio" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Fecha de fin:</label>
        <input type="date" name="fin" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Generar Cierre</button>
}

@if (Model != null)
{
    <h3 class="mt-4">Cierre Semanal generado</h3>
    <p><strong>Fecha inicio:</strong> @Model.FechaInicio.ToShortDateString()</p>
    <p><strong>Fecha fin:</strong> @Model.FechaFin.ToShortDateString()</p>
    <p><strong>Total Ingresos:</strong> @Model.TotalIngresos.ToString("C")</p>
    <p><strong>Total Egresos:</strong> @Model.TotalEgresos.ToString("C")</p>
    <p><strong>Balance:</strong> @Model.Balance.ToString("C")</p>

    <a href="@Url.Action("DescargarCierre", "Contabilidad", new { inicio = Model.FechaInicio, fin = Model.FechaFin, formato = "PDF" })" class="btn btn-danger">Descargar PDF</a>
    <a href="@Url.Action("DescargarCierre", "Contabilidad", new { inicio = Model.FechaInicio, fin = Model.FechaFin, formato = "Excel" })" class="btn btn-success">Descargar Excel</a>
}

<div class="mt-3">
    @Html.ActionLink("Volver al Dashboard", "Index", "Contabilidad", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

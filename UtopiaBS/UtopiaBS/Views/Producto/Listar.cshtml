@model IEnumerable<UtopiaBS.Entities.Producto>
@{
    ViewBag.Title = "Inventario (Productos y Cupones)";
    var cupones = ViewBag.Cupones as IEnumerable<UtopiaBS.Entities.CuponDescuento>;
    if (cupones == null)
    {
        using (var _db = new UtopiaBS.Data.Context())
        {
            cupones = _db.CuponDescuento.ToList();
        }
    }
}

<div class="container mt-5">

    <!-- === PRODUCTOS === -->
    <div class="card shadow-lg border-0 rounded-3 mb-5">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">📦 Listado de Productos</h3>
            @Html.ActionLink("➕ Agregar Producto", "Agregar", "Producto", null, new { @class = "btn btn-light btn-sm" })
        </div>
        <div class="card-body">

            @if (TempData["MensajeProducto"] != null)
            {
                <div class="alert alert-success">@TempData["MensajeProducto"]</div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">Nombre</th>
                            <th class="text-center">Tipo</th>
                            <th class="text-center">Proveedor</th>
                            <th class="text-center">Precio</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-center">Fecha</th>
                            <th class="text-center">Threshold</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><strong>@item.Nombre</strong></td>
                                <td class="text-center">@item.Tipo</td>
                                <td class="text-center">@item.Proveedor</td>
                                <td class="text-center"><span class="badge bg-success">₡@item.PrecioUnitario</span></td>
                                <td class="text-center">
                                    @if (item.CantidadStock > item.Threshold)
                                    {
                                        <span class="badge bg-warning text-dark">@item.CantidadStock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@item.CantidadStock</span>
                                    }

                                    @if ((DateTime.Now - item.Fecha).TotalDays > 90)
                                    {
                                        <span class="badge bg-secondary ms-1" title="Producto antiguo">⌛</span>
                                    }
                                </td>
                                <td class="text-center">@item.Fecha.ToShortDateString()</td>
                                <td class="text-center"><span class="badge bg-warning text-dark">@item.Threshold</span></td>
                                <td class="text-center">
                                    @Html.ActionLink("✏️", "Editar", "Producto", new { id = item.IdProducto }, new { @class = "btn btn-sm btn-outline-warning me-1", title = "Editar" })
                                    <button type="button" class="btn btn-sm btn-outline-danger eliminar-btn"
                                            data-id="@item.IdProducto" data-nombre="@item.Nombre" data-tipo="producto" title="Eliminar">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- === CUPONES === -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">🎟️ Listado de Cupones de Descuento</h3>
            <a class="btn btn-light btn-sm" href="@Url.Action("Agregar", "CuponDescuento")">➕ Agregar Cupón</a>
        </div>
        <div class="card-body">

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }
            @if (TempData["MensajeCupon"] != null)
            {
                <div class="alert alert-success">@TempData["MensajeCupon"]</div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">Código</th>
                            <th class="text-center">Tipo / Valor</th>
                            <th class="text-center">Fecha Inicio</th>
                            <th class="text-center">Fecha Fin</th>
                            <th class="text-center">Activo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (cupones != null && cupones.Any())
                        {
                            foreach (var cupon in cupones)
                            {
                                <tr>
                                    <td class="text-center"><strong>@cupon.Codigo</strong></td>
                                    <td class="text-center">
                                        @if (string.Equals(cupon.Tipo, "Porcentaje", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-info">@cupon.Valor %</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">₡@cupon.Valor</span>
                                        }
                                    </td>
                                    <td class="text-center">@cupon.FechaInicio.ToShortDateString()</td>
                                    <td class="text-center">@cupon.FechaFin.ToShortDateString()</td>
                                    <td class="text-center">
                                        @using (Html.BeginForm("CambiarEstado", "CuponDescuento", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("id", cupon.CuponId)
                                            <button type="submit" class="btn btn-sm @(cupon.Activo ? "btn-success" : "btn-secondary")">
                                                @(cupon.Activo ? "Activo" : "Inactivo")
                                            </button>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("✏️", "Editar", "CuponDescuento", new { id = cupon.CuponId }, new { @class = "btn btn-sm btn-outline-warning me-1", title = "Editar" })
                                        <button type="button" class="btn btn-sm btn-outline-danger eliminar-btn"
                                                data-id="@cupon.CuponId" data-nombre="@cupon.Codigo" data-tipo="cupon" title="Eliminar">
                                            🗑️
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No hay cupones registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- === MODAL DE ELIMINACIÓN === -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea eliminar <strong><span id="modalNombre"></span></strong>?
            </div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="inputId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- === JS === -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modalEl = document.getElementById("modalEliminar");
        const bsModal = new bootstrap.Modal(modalEl);
        const inputId = document.getElementById("inputId");
        const nombreEl = document.getElementById("modalNombre");
        const formEliminar = document.getElementById("formEliminar");

        document.querySelectorAll(".eliminar-btn").forEach(btn => {
            btn.addEventListener("click", function () {
                inputId.value = this.dataset.id;
                nombreEl.textContent = this.dataset.nombre;
                const tipo = this.dataset.tipo;
                formEliminar.action = tipo === "producto"
                    ? "@Url.Action("Eliminar", "Producto")"
                    : "@Url.Action("Eliminar", "CuponDescuento")";
                bsModal.show();
            });
        });
    });
</script>

<style>
    .table-dark th {
        background-color: #4e73df;
        color: white;
    }

    .btn-outline-warning, .btn-outline-danger {
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge {
        font-size: 0.9rem;
    }
</style>

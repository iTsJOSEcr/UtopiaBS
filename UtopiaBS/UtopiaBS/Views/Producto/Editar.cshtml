@model UtopiaBS.Entities.Producto

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <!-- ENCABEZADO -->
                <div class="card-header text-dark text-center fw-bold" style="background-color:#FFD60A;">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i> Editar Producto
                    </h3>
                </div>

                <div class="card-body p-4">

                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                    {
                        <div class="alert alert-success text-center fw-semibold rounded-pill shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Mensaje
                        </div>
                    }

                    @using (Html.BeginForm("Editar", "Producto", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IdProducto)
                        @Html.HiddenFor(m => m.Threshold)

                        <div class="row g-3">

                            <!-- NOMBRE -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Nombre)
                                @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control form-control-lg shadow-sm" } })
                            </div>

                            <!-- TIPO -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Tipo)
                                @Html.EditorFor(m => m.Tipo, new { htmlAttributes = new { @class = "form-control form-control-lg shadow-sm" } })
                            </div>

                            <!-- PROVEEDOR -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Proveedor)
                                @Html.EditorFor(m => m.Proveedor, new { htmlAttributes = new { @class = "form-control form-control-lg shadow-sm" } })
                            </div>

                            <!-- PRECIO -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.PrecioUnitario)
                                @Html.EditorFor(m => m.PrecioUnitario, new { htmlAttributes = new { @class = "form-control form-control-lg shadow-sm" } })
                            </div>

                            <!-- STOCK -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.CantidadStock)
                                @Html.EditorFor(m => m.CantidadStock, new { htmlAttributes = new { @class = "form-control form-control-lg shadow-sm" } })
                            </div>

                            <!-- FECHA CREACIÓN -->
                            <div class="col-md-6">
                                <label class="form-label">Fecha de Creación</label>
                                <input type="text" class="form-control form-control-lg shadow-sm bg-light"
                                       value="@Model.Fecha.ToString("dd/MM/yyyy")" readonly />
                            </div>

                            <!-- FECHA EXPIRACIÓN -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Fecha de Expiración</label>
                                <input type="date"
                                       name="FechaExpiracion"
                                       class="form-control form-control-lg shadow-sm"
                                       value="@(Model.FechaExpiracion.HasValue ? Model.FechaExpiracion.Value.ToString("yyyy-MM-dd") : "")" />
                            </div>

                            <!-- DÍAS ANTICIPACIÓN -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Días de Anticipación</label>
                                <input type="number"
                                       name="DiasAnticipacion"
                                       class="form-control form-control-lg shadow-sm"
                                       value="@(Model.DiasAnticipacion ?? 30)" />
                                <small class="text-muted">Valor por defecto: 30 días.</small>
                            </div>

                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-between gap-3 mt-4">
                            <button type="submit" class="btn fw-semibold text-dark shadow-sm w-100 rounded-pill py-2" style="background-color:#FFD60A;">
                                <i class="bi bi-save2 me-2"></i> Guardar Cambios
                            </button>

                            @Html.ActionLink("⬅ Volver al Listado", "Listar", "Producto",
                                null, new { @class = "btn btn-outline-secondary fw-semibold w-100 rounded-pill py-2" })
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control-lg {
        border-radius: 10px;
        border: 1px solid #ced4da;
        height: 46px;
    }
</style>

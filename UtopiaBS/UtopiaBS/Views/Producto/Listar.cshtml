@model IEnumerable<UtopiaBS.Entities.Producto>

@{
    ViewBag.Title = "Listado de Productos";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">📦 Listado de Productos</h3>
            @Html.ActionLink("➕ Agregar Producto", "Agregar", "Producto", null, new { @class = "btn btn-light btn-sm" })
        </div>
        <div class="card-body">

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">Nombre</th>
                            <th class="text-center">Tipo</th>
                            <th class="text-center">Proveedor</th>
                            <th class="text-center">Precio</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-center">Fecha</th>
                            <th class="text-center">Threshold</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><strong>@item.Nombre</strong></td>
                                <td class="text-center">@item.Tipo</td>
                                <td class="text-center">@item.Proveedor</td>
                                <td class="text-center"><span class="badge bg-success">₡@item.PrecioUnitario</span></td>
                                <td class="text-center">
                                    @* Alerta de stock bajo *@
                                    @if (item.CantidadStock > item.Threshold)
                                    {
                                        <span class="badge bg-warning text-dark">@item.CantidadStock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@item.CantidadStock</span>
                                    }

                                    @* Alerta de producto antiguo (>90 días) *@
                                    @if ((DateTime.Now - item.Fecha).TotalDays > 90)
                                    {
                                        <span class="badge bg-secondary ms-1" title="Producto antiguo">⌛</span>
                                    }
                                </td>
                                <td class="text-center">@item.Fecha.ToShortDateString()</td>
                                <td class="text-center"><span class="badge bg-warning text-dark">@item.Threshold</span></td>
                                <td class="text-center">
                                    @Html.ActionLink("✏️", "Editar", new { id = item.IdProducto }, new { @class = "btn btn-sm btn-outline-warning me-1", title = "Editar" })
                                    <button type="button" class="btn btn-sm btn-outline-danger eliminar-btn"
                                            data-id="@item.IdProducto" data-nombre="@item.Nombre" title="Eliminar">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarLabel">Eliminar Producto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea eliminar el producto <strong><span id="modalNombreProducto"></span></strong>?
            </div>
            <div class="modal-footer">
                <form id="formEliminar" method="post" action="@Url.Action("Eliminar", "Producto")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="inputIdProducto" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JS -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modal = new bootstrap.Modal(document.getElementById("modalEliminar"));
        const inputIdProducto = document.getElementById("inputIdProducto");
        const nombreProductoEl = document.getElementById("modalNombreProducto");

        document.querySelectorAll(".eliminar-btn").forEach(btn => {
            btn.addEventListener("click", function () {
                inputIdProducto.value = this.dataset.id;
                nombreProductoEl.textContent = this.dataset.nombre;
                modal.show();
            });
        });
    });
</script>

<style>
    .table-dark th {
        background-color: #4e73df;
        color: white;
    }

    .btn-outline-warning, .btn-outline-danger {
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge {
        font-size: 0.9rem;
    }
</style>

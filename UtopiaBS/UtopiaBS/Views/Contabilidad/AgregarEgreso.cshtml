@model UtopiaBS.Entities.Contabilidad.Egreso

@{
    ViewBag.Title = "Agregar Egreso";
}

<h2>Agregar Egreso</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">@ViewBag.Mensaje</div>
}

@using (Html.BeginForm("AgregarEgreso", "Contabilidad", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Monto)
        @Html.TextBoxFor(m => m.Monto, new { @class = "form-control", type = "number", step = "0.01" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TipoGasto)
        @Html.TextBoxFor(m => m.TipoGasto, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Egreso</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

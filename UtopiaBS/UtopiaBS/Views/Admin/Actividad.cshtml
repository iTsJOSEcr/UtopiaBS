@model IEnumerable<UtopiaBS.Entities.UsuarioActividad>

@{
    ViewBag.Title = "Bitácora de Actividad";
    var usuario = ViewBag.Usuario;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">

    <div class="card shadow-lg border-0 rounded-4">

        <!--  ENCABEZADO -->
        <div class="card-header text-white d-flex justify-content-between align-items-center"
             style="background-color:#1B263B;">
            <h4 class="mb-0 fw-bold">
                🕒 Bitácora de Actividad - @usuario.UserName
            </h4>

            <a href="@Url.Action("GestionUsuarios","Admin")"
               class="btn btn-light btn-sm rounded-pill shadow-sm">
                ⬅ Volver
            </a>
        </div>

        <div class="card-body" style="background-color:#F8FAFC;">

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center fw-semibold rounded-3 shadow-sm">
                    Este usuario aún no tiene registros de actividad.
                </div>
            }
            else
            {
                <div class="table-responsive rounded-3 shadow-sm">
                    <table class="table table-hover align-middle text-center mb-0">

                        <thead class="text-white text-uppercase small"
                               style="background-color:#1B263B;">
                            <tr>
                                <th>#</th>
                                <th>Inicio de Sesión</th>
                                <th>Cierre de Sesión</th>
                                <th>Estado</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int contador = 1;
                            }

                            @foreach (var item in Model)
                            {
                                bool activo = item.FechaFin == null;

                                <tr>
                                    <td class="fw-semibold">@contador</td>

                                    <td>
                                        @item.FechaInicio.ToString("dd/MM/yyyy HH:mm")
                                    </td>

                                    <td>
                                        @(item.FechaFin == null
                                            ? "--"
                                            : item.FechaFin.Value.ToString("dd/MM/yyyy HH:mm"))
                                    </td>

                                    <td>
                                        @if (activo)
                                        {
                                            <span class="badge bg-success px-3 py-2 rounded-pill">
                                                En sesión
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary px-3 py-2 rounded-pill">
                                                Finalizada
                                            </span>
                                        }
                                    </td>
                                </tr>

                                contador++;
                            }
                        </tbody>

                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #F1F5F9;
    }

    .table-hover tbody tr:hover {
        background-color: #E3F2FD;
    }

    .badge {
        font-size: 0.85rem;
    }
</style>

@using Microsoft.AspNet.Identity
@{
    Layout = null;

    bool autenticado = Request.IsAuthenticated;
    bool esAdmin = autenticado && User.IsInRole("Administrador");
    bool esCliente = autenticado && User.IsInRole("Cliente");
    bool esAdminHome = autenticado && Request.RawUrl.ToLower().Contains("/home/adminhome");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - Utopia</title>

    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/assets/favicon.ico")" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" />

    <link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet" />

    <!-- FullCalendar (si lo usás en otras vistas) -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/locales/es.js"></script>

    <!-- Bootstrap JS al final del body, el CSS lo trae styles.css -->
</head>

<body id="page-top">

    @if (autenticado)
    {
        <nav id="mainNav" class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm" style="background-color:#000;">
            <div class="container-fluid px-4">
                <!-- LOGO -->
                <a class="navbar-brand fw-semibold"
                   href="@(esAdmin ? Url.Action("AdminHome", "Home") : Url.Action("Index", "Home"))">
                    <i class="fas fa-spa me-2 text-warning"></i> UTOPIA BEAUTY SALON
                </a>

                <!-- BOTÓN RESPONSIVE -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                        aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-3">

                        @* -------- MENÚ CLIENTE -------- *@
                        @if (esCliente && !esAdminHome)
                        {
                            <li class="nav-item dropdown mx-lg-1">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarCitasCliente" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-calendar-alt me-1"></i> Citas
                                </a>
                                <ul class="dropdown-menu fadeIn" aria-labelledby="navbarCitasCliente">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Listar", "CitaCliente")">
                                            <i class="fas fa-calendar-plus me-2 text-success"></i> Citas Disponibles
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("MisCitas", "CitaCliente")">
                                            <i class="fas fa-user-clock me-2 text-primary"></i> Mis Citas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Historial", "CitaCliente")">
                                            <i class="fas fa-clock me-2 text-info"></i> Historial de Citas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("MisPuntos", "Account")">
                                            <i class="fas fa-coins me-2 text-warning"></i> Puntos
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @* -------- MENÚ ADMIN -------- *@
                        @if (esAdmin && !esAdminHome)
                        {
                            <!-- Gestión de Citas -->
                            <li class="nav-item dropdown mx-lg-1">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarCitasAdmin" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-calendar-alt me-1"></i> Gestión de Citas
                                </a>
                                <ul class="dropdown-menu fadeIn" aria-labelledby="navbarCitasAdmin">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ListarAgendadas", "Cita")">
                                            <i class="fas fa-calendar-check me-2 text-info"></i> Citas Agendadas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Administrar", "Cita")">
                                            <i class="fas fa-tools me-2 text-warning"></i> Administrar Citas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Reportes", "Cita")">
                                            <i class="fas fa-file-alt me-2 text-success"></i> Reportes
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Inventario -->
                            <li class="nav-item mx-lg-1">
                                <a class="nav-link" href="@Url.Action("Listar", "Producto")">
                                    <i class="fas fa-boxes me-1"></i> Inventario
                                </a>
                            </li>

                            <!-- Punto de Venta -->
                            <li class="nav-item mx-lg-1">
                                <a class="nav-link" href="@Url.Action("PuntoVenta", "Ventas")">
                                    <i class="fas fa-cash-register me-1"></i> Punto de Venta
                                </a>
                            </li>

                            <!-- Contabilidad -->
                            <li class="nav-item mx-lg-1">
                                <a class="nav-link" href="@Url.Action("Index", "Contabilidad")">
                                    <i class="fas fa-money-bill-wave me-1"></i> Contabilidad
                                </a>
                            </li>

                            <!-- Administración (Gestión Usuarios + Membresías) -->
                            <li class="nav-item dropdown mx-lg-1">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarAdmin" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-shield me-1"></i> Administración
                                </a>
                                <ul class="dropdown-menu fadeIn" aria-labelledby="navbarAdmin">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("GestionUsuarios", "Admin")">
                                            <i class="fas fa-users-cog me-2 text-warning"></i> Gestión de Usuarios
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Panel", "Membresias")">
                                            <i class="fas fa-id-card me-2 text-info"></i> Membresías
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Recompensas")">
                                            <i class="fas fa-gift-fill me-2 text-info"></i> Gestión de Recompensas
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- USUARIO -->
                        <li class="nav-item dropdown mx-lg-1">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i> @User.Identity.GetUserName()
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end fadeIn" aria-labelledby="userDropdown">

                                @* Reporte activos SOLO admin *@
                                @if (esAdmin)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "ReporteUsuariosActivos")">
                                            <i class="fas fa-users-line me-2 text-warning"></i> Reporte de Usuarios Activos
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Perfil", "Account")">
                                        <i class="fas fa-id-card me-2 text-info"></i> Perfil
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                        <i class="fas fa-sign-out-alt me-2 text-danger"></i> Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    }
    else
    {
        <!-- NAVBAR para no autenticados -->
        <nav id="mainNav" class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm" style="background-color:#000;">
            <div class="container">
                <a class="navbar-brand fw-semibold" href="@Url.Action("Index","Home")">
                    <i class="fas fa-spa me-2 text-warning"></i> UTOPIA BEAUTY SALON
                </a>
                <div class="d-flex ms-auto">
                    <a class="btn btn-outline-light fw-semibold rounded-pill px-3" href="@Url.Action("Login", "Account")">
                        <i class="fas fa-sign-in-alt me-1"></i> Iniciar sesión
                    </a>
                </div>
            </div>
        </nav>
    }

    <!-- ESTILOS MENU -->
    <style>
        body {
            padding-top: 70px;
            background-color: #fafafa;
            font-family: 'Poppins', sans-serif;
        }

        #mainNav {
            background-color: rgba(10, 10, 10, 0.96);
            backdrop-filter: blur(6px);
            transition: all 0.3s ease-in-out;
            font-size: 0.94rem;
        }

        #mainNav .nav-link,
        #mainNav .navbar-brand,
        #mainNav .dropdown-item {
            color: #f1f1f1 !important;
        }

        #mainNav .nav-link:hover,
        #mainNav .dropdown-item:hover {
            color: #FFD60A !important;
            text-shadow: 0 0 3px rgba(255, 214, 10, 0.35);
        }

        #mainNav .dropdown-menu {
            background-color: #141414;
            border: none;
            border-radius: 8px;
            padding: 0.4rem 0;
            min-width: 220px;
        }
    </style>

    @RenderBody()

    <!-- FOOTER -->
    <footer class="footer py-4 mt-auto">
        <div class="container text-center">
            <small class="text-muted">© Utopia Beauty Salon @DateTime.Now.Year</small>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
